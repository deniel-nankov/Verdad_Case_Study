# API Keys and Secrets
# Copy this file to .env and fill in your actual keys
# NEVER commit .env to git!

# Alpha Vantage API (for FX data)
# Get free key at: https://www.alphavantage.co/support/#api-key
ALPHAVANTAGE_API_KEY=your_alphavantage_key_here

# FRED API (for macro data)
# Get free key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_key_here

# OANDA API (for live trading)
# Get key at: https://www.oanda.com/
OANDA_API_KEY=your_oanda_key_here
OANDA_ACCOUNT_ID=your_account_id_here
OANDA_ENVIRONMENT=practice  # or 'live'

# Trading System Settings
TRADING_MODE=paper  # 'paper' or 'live'
BROKER_TYPE=paper  # 'paper', 'oanda', 'ib', 'alpaca'
INITIAL_CAPITAL=100000

# Optional: Email/Slack alerts
ALERT_EMAIL=your.email@example.com
SLACK_WEBHOOK_URL=your_slack_webhook_url
